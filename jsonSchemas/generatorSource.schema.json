{
    "title": "DMBinder Generator Source schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "generatorType": {
            "description": "The type of generator",
            "type": "string",
            "enum": [
                "basic",
                "import",
                "markov"
            ],
            "default": "basic"
        },
        "sourceFile": {
            "description": "URI to other generator source file",
            "type": "string"
        },
        "values": {
            "description": "A list of templates or values to use when generating strings",
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "conditionalValues": {
            "description": "A list of templates or values to use when generating strings",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "condition": {
                        "type": "string"
                    },
                    "values": {
                        "description": "A list of templates or values to use when generating strings if condition evaluates to true",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": []
                    }
                },
                "required": [
                    "condition",
                    "values"
                ]
            },
            "default": []
        },
        "sources": {
            "description": "A list of dependent sources required by this generator",
            "type": "object",
            "additionalProperties": {
                "$ref": "#"
            }
        }
    }
}