{
    "Homebrewery Note": {
        "prefix": "phb-note",
        "description": "Homebrewery 'note' item",
        "body": [
            "> ##### ${1:Note Title}",
            "> $0"
        ]
    },
    "Homebrewery Spell": {
        "prefix": "phb-spell",
        "description": "Homebrewery generic 'spell' item",
        "body": [
            "#### ${title:Grease}",
            "*${level|Cantrip,1st-level,2nd-level,3rd-level,4th-level,5th-level,6th-level,7th-level,8th-level,9th-level|} ${school:Conjuration}*",
            "___",
            "- **Casting Time:** ${time:1 Action}",
            "- **Range/Area:** ${range:60 ft}${area: (10 ft square)}",
            "- **Components:** ${components:V, S, M (a bit of pork rind or butter)}",
            "- **Duration:** ${duration:1 Minute}",
            "",
            "$0"
        ]
    },
    "Homebrewery Spell List": {
        "prefix": "phb-spell-list",
        "description": "Homebrewery 'spell list' item",
        "body": [
            "<div class='spellList'>",
            "",
            "##### Cantrips (0 Level) ",
            "- $1 ",
            "",
            "##### 2nd Level ",
            "- $2 ",
            "",
            "##### 3rd Level ",
            "- $3 ",
            "",
            "##### 4th Level ",
            "- $4 ",
            "",
            "##### 5th Level ",
            "- $5 ",
            "",
            "##### 6th Level ",
            "- $6 ",
            "",
            "##### 7th Level ",
            "- $7 ",
            "",
            "##### 8th Level ",
            "- $8 ",
            "",
            "##### 9th Level ",
            "- $9 ",
            "",
            "</div>"
        ]
    },
    "Homebrewery Page Footer": {
        "prefix": "phb-page-footer",
        "description": "Homebrewery page footer and auto page numbering",
        "body": [
            "<div class='pageNumber auto'></div>",
            "<div class='footnote'>$0</div>"
        ]
    },
    "Homebrewery Print Styles": {
        "prefix": "phb-print",
        "description": "Homebrewery print styling (to save color ink)",
        "body": [
            "<style>",
            " .phb#p1{ text-align:center; }",
            " .phb#p1:after{ display:none; }",
            "</style>"
        ]
    },
    "Homebrewery Wide Block": {
        "prefix": "phb-wide-block",
        "description": "Homebrewery 'wide' block that spans the whole page",
        "body": [
            "<div class='wide'>",
            "",
            "$0",
            "</div>"
        ]
    },
    "Homebrewery Class Table": {
        "prefix": "phb-class-table",
        "description": "Homebrewery class table",
        "body": [
            "<div class='classTable'>",
            "",
            "##### ${className}",
            "| Level | Proficiency Bonus | Features |",
            "|:-----:|:-----------------:|:--------:|",
            "| 1st   | +1                |          |",
            "</div>"
        ]
    },
    "Homebrewery Wide Class Table": {
        "prefix": "phb-class-table-wide",
        "description": "Homebrewery page wide class table",
        "body": [
            "<div class='classTable wide'>",
            "",
            "##### ${className}",
            "| Level | Proficiency Bonus | Features |",
            "|:-----:|:-----------------:|:--------:|",
            "| 1st   | +1                |          |",
            "</div>"
        ]
    }
}